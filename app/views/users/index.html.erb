<%= provide(:title,"Users list")%>
<div class="row">
  <div class="col-12">
    <div class="container my-3">
      <h1 class="texr-center">List of Users</h1>
      <%= will_paginate %>
        <ul class="users">
          <% @users.each do |user|%>
          <li class="my-3">
            <%= gravatar_for user ,size:52%>
            <%= link_to user.name, user%>
            <% if current_user ==user %> -
            <%= link_to 'Delete', user_path(user),
            method: :delete,
            data: { confirm: "Are you sure?" }
            class:"text-danger"
            %>
            <% end %>
          </li>
          <% end %>
        </ul>
      <%= will_paginate %>
    </div>
  </div>
</div>
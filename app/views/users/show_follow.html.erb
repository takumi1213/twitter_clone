<% provide(:title ,@title) %>
  <div class="row">
    <div class="col-4">
      <section class="user_info">
        <%= gravatar_for @user %>
          <h1> <%= @user.name %> </h1>
          <span> <%= link_to "view profile", @user %> </span>
          <span> <b>Microposts:</b> <%= @user.microposts.count %> </span>
        </section>
        <section class="stats">
          <%= render 'shared/stats' %>
            <% if @all_users.any? %>
              <div class="user_avatars">
                 <% @all_users.each do |user| %>
                 <%= link_to gravatar_for(user, size: 30), user %>
                 <% end %>
              </div>
            <% end %>
      </section>
    </div>
    <div class="col-8">
      <h3><%= @title%></h3>
      <% if @users.any?%>
        <%@users.each do |user|%>
            <ul class="user_follow">
              <%= render user%>
            </ul>
        <% end%>
        <%= will_paginate @users%>  
      <%end%>
    </div>
  </div>
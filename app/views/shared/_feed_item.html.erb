<div class="card my-3 w-100">
  <div class="row">
    <div class="col-2">
      <%= link_to gravatar_for(feed_item.user ,size:52), user_path(feed_item.user)%>
</div>
  <div class="col-10">
    <h5 class="card-title">
      <%= link_to feed_item.user.name , feed_item.user%>
    </h5>
    <p class="card-text"><%= feed_item.content%></p>
    <p class="card-text">
      <small class="text-muted">
      <%= time_ago_in_words(feed_item.created_at)%>
      </small>
    </p>
  </div>
</div>
</div>